# ============================================================================
# ANALYSIS ENGINE - ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your actual credentials
# ============================================================================

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key-here

# ============================================================================
# AI API KEYS
# ============================================================================
# OpenAI API Key (for GPT-4o Vision screenshot analysis)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# xAI API Key (for Grok-beta SEO/content/social analysis)
# Get from: https://console.x.ai/
XAI_API_KEY=xai-your-xai-api-key-here

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
# Port for Analysis Engine server (default: 3001)
PORT=3001

# ============================================================================
# AI SYNTHESIS CONFIGURATION (NEW - v2.0)
# ============================================================================
# Enable AI-powered report synthesis (MANDATORY for executive reports)
# This consolidates issues and generates business insights
USE_AI_SYNTHESIS=true

# Synthesis timeout in milliseconds (default: 180000 = 3 minutes)
SYNTHESIS_TIMEOUT=180000

# Require synthesis for all reports (fail if synthesis fails)
SYNTHESIS_REQUIRED=true

# ============================================================================
# REPORT GENERATION SETTINGS
# ============================================================================
# Auto-generate reports after analysis
AUTO_GENERATE_REPORTS=true

# Default report format (html, markdown, pdf)
REPORT_FORMAT=html

# Report version (v3 = concise/mobile-friendly, v2 = executive, v1 = technical)
# Default: v3 (latest - professional light theme, mobile-responsive, no repetition)
REPORT_VERSION=v3

# Report style (executive = business-first, technical = detailed audit)
# Note: Only applies when REPORT_VERSION=v2 or v1
REPORT_STYLE=executive

# Include ROI projections and business metrics
INCLUDE_ROI=true

# Include competitive analysis
INCLUDE_COMPETITORS=true

# ============================================================================
# BUSINESS METRICS CONFIGURATION
# ============================================================================
# Weights for prioritization (must sum to 1.0)
WEIGHT_BUSINESS_IMPACT=0.4
WEIGHT_IMPLEMENTATION_EFFORT=0.3
WEIGHT_QUICK_WIN_POTENTIAL=0.3

# Industry for ROI calculations (affects multipliers)
# Options: ecommerce, saas, healthcare, finance, education, nonprofit,
#          restaurant, retail, real-estate, professional-services
DEFAULT_INDUSTRY=professional-services

# ============================================================================
# OPTIONAL: DEVELOPMENT SETTINGS
# ============================================================================
# Uncomment and configure as needed

# Node environment
# NODE_ENV=development

# Enable debug logging
# DEBUG=true

# Use cached AI responses (development only - saves API costs)
# ENABLE_AI_CACHE=true

# Skip synthesis for testing (NOT RECOMMENDED for production)
# SKIP_SYNTHESIS=false

# ============================================================================
# SECURITY NOTES
# ============================================================================
# ⚠️ NEVER commit .env or any file with real credentials to git!
# ⚠️ Keep service role keys secure - never expose in browser code
# ⚠️ Rotate keys immediately if accidentally exposed
# ⚠️ Use different credentials for dev/staging/production environments
# ⚠️ Review .gitignore to ensure .env is excluded