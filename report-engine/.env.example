# ==========================================
# REPORT ENGINE CONFIGURATION
# ==========================================

# Server Configuration
PORT=3003
NODE_ENV=development

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Supabase Connection
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# ==========================================
# AI SYNTHESIS CONFIGURATION
# ==========================================

# AI-powered report synthesis (ALWAYS ENABLED by default)
# Only set to 'false' to explicitly disable AI synthesis
# Default: true (enabled if not set or set to any value except 'false')
USE_AI_SYNTHESIS=true

# Synthesis timeout (milliseconds)
SYNTHESIS_TIMEOUT=180000

# Require synthesis to succeed (fail if synthesis fails)
SYNTHESIS_REQUIRED=false

# AI API Keys (for synthesis)
OPENAI_API_KEY=sk-...
XAI_API_KEY=xai-...
ANTHROPIC_API_KEY=sk-ant-...

# AI Call Logging & Debugging
LOG_AI_CALLS_TO_DB=false       # Save AI calls to ai_calls table for cost tracking/analysis
DEBUG_AI_CALLS=false           # Log all AI prompts/responses to console
DEBUG_AI_SAVE_TO_FILE=false    # Save AI calls to debug files (timestamped logs)

# ==========================================
# REPORT GENERATION SETTINGS
# ==========================================

# Default report format (html, markdown, pdf)
REPORT_FORMAT=html

# Report version (v1=technical, v2=executive, v3=concise)
REPORT_VERSION=v3

# Report style (executive, technical) - applies to v1/v2 only
REPORT_STYLE=executive

# Report type (preview, full)
REPORT_TYPE=full

# Include features
INCLUDE_ROI=true
INCLUDE_COMPETITORS=true
INCLUDE_SCREENSHOTS=true

# PDF Generation
AUTO_GENERATE_PDF=false

# ==========================================
# BUSINESS METRICS
# ==========================================

# Priority calculation weights
WEIGHT_BUSINESS_IMPACT=0.4
WEIGHT_IMPLEMENTATION_EFFORT=0.3
WEIGHT_QUICK_WIN_POTENTIAL=0.3

# Default industry for generic leads
DEFAULT_INDUSTRY=professional-services

# ==========================================
# STORAGE CONFIGURATION
# ==========================================

# Local backup path
LOCAL_BACKUP_PATH=../local-backups/report-engine/reports

# Supabase Storage
STORAGE_BUCKET=reports
STORAGE_PUBLIC_ACCESS=false
SIGNED_URL_EXPIRATION=3600

# ==========================================
# CORS CONFIGURATION
# ==========================================

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3010,http://localhost:3002,http://localhost:3020
